<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/create_edit_dialog_edt_task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task description"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/create_edit_dialog_edt_task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task description"
            android:textSize="16sp"
            android:textStyle="bold" />
        <DatePicker
            android:id="@+id/dialog_datePicker"
            style="@android:style/Widget.Holo.DatePicker"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RadioGroup
            android:id="@+id/dialog_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/dialog_rbtn_priority_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High"
                android:layout_marginHorizontal="10dp"
                android:buttonTint="@color/colorAccent"/>

            <RadioButton
                android:id="@+id/dialog_rbtn_priority_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:layout_marginHorizontal="10dp"
                android:buttonTint="@color/colorAccent"/>

            <RadioButton
                android:id="@+id/dialog_rbtn_priority_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low"
                android:layout_marginHorizontal="10dp"
                android:buttonTint="@color/colorAccent"/>
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/dialog_tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"/>
        <TextView
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/dialog_tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"/>

    </LinearLayout>

</LinearLayout>